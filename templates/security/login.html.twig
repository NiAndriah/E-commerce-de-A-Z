{% extends 'base.html.twig' %}

{% block title %}Se Connecter - Super-Boutique{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/login.css') }}"/>
    <form method="post">
        <div class="main-bg">
            <div class="login-container text-c">
                <h3 class="text-whitesmoke">Connexion</h3>
                <div class="container-content">
                    <form class="form">
                        {% if error %}
                            <div class="text-red text-c">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" 
                            placeholder="Votre adresse email" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="*******" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="form-button button-l margin-b">Se connecter</button>
                        <span class="text-darkyellow text-none">Où souhaitez vous de | </span><a class="text-darkyellow text-none" href="{{ path('register') }}">Créer un compte</a>
                    </form>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
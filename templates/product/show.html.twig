{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Super-Boutique {% endblock %}

{% block content %}

<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }}</h3>
        <p>{{ product.subtitle }}</p>
        <span class="product-page-price">{{ (product.price/100)|number_format(2, ',', '.') }} Ar</span>
        <hr>
        <p>
            {{ product.description }}
        </p>
    </div>
    <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-success btn-block mt-3">Ajouter au panier</a>
</div>

{% endblock %}
